@{
    ViewData["Title"] = "Scanner";
}
@model ScannerLib.NetScanner;

<div class="row">
    @{
        if (Model!=null && Model.Settings != null)
        {
            <h4 class="col-8">LAN Scanner</h4>
            <div class="col-2 px-1">
                <a class="btn btn-primary" asp-controller="Scanner" asp-action="Result">Start scan</a>
            </div>
            <div class="col-2 px-1">
                <a class="btn btn-secondary" asp-controller="Scanner" asp-action="Settings">Settings</a>
            </div>
        }
        else
        {
            <h4 class="col-10">LAN Scanner</h4>
            <a class="btn btn-secondary col-2" asp-controller="Scanner" asp-action="Settings">Settings</a>
        }
    }
</div>

